<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Portfolio</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        header {
            text-align: center;
            margin-bottom: 30px;
        }

        section {
            margin-bottom: 30px;
        }

        /* Simple animation */
        .skill {
            width: 200px;
            padding: 10px;
            background-color: lightblue;
            text-align: center;
            animation: move 3s infinite;
        }

        @keyframes move {
            from { margin-left: 0; }
            to { margin-left: 100px; }
        }

        img {
            width: 200px;
            margin: 10px;
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <h1>Your Name</h1>
        <p>I am a Computer Science student with an interest in web technologies and multimedia.</p>
    </header>

    <!-- Video Section -->
    <section>
        <h2>Video</h2>
        <video width="400" controls>
            <source src="video.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </section>

    <!-- Audio Section -->
    <section>
        <h2>Audio Introduction</h2>
        <audio controls>
            <source src="audio.mp3" type="audio/mp3">
            Your browser does not support the audio element.
        </audio>
    </section>

    <!-- Image Gallery -->
    <section>
        <h2>Image Gallery</h2>
        <img src="image1.jpg" alt="Project Image 1">
        <img src="image2.jpg" alt="Project Image 2">
        <img src="image3.jpg" alt="Project Image 3">
    </section>

    <!-- Animation Section -->
    <section>
        <h2>Key Skill Highlight</h2>
        <div class="skill">Web Development</div>
    </section>

</body>
</html>
